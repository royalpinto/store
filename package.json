{
  "name": "store",
  "version": "1.1.0",
  "private": true,
  "description": "A simple shopping experience.",
  "main": "app.js",
  "scripts": {
    "test": "mocha test --recursive",
    "coverage": "export NODE_ENV=test && istanbul cover _mocha -- --recursive test",
    "lint": "eslint --ignore-path .gitignore .",
    "start": "node ./bin/www",
    "compile": "gulp",
    "demo": "node demo/init.js && node ./bin/www",
    "doc": "apidoc -e node_modules/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/royalpinto/store.git"
  },
  "author": "Royal Pinto <royalpinto@gmail.com>",
  "dependencies": {
    "body-parser": "~1.13.2",
    "connect-mongo": "^1.3.2",
    "express-session": "^1.14.1",
    "mongodb": "^2.2.9",
    "node-static": "^0.7.8",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "eslint": "^3.8.0",
    "eslint-config-google": "^0.5.0",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-less": "^3.1.0",
    "gulp-uglify": "^2.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "pump": "^1.0.1"
  },
  "eslintConfig": {
    "extends": "google",
    "rules": {
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "no-multiple-empty-lines": [
        2,
        {
          "max": 2,
          "maxEOF": 1
        }
      ],
      "indent": [
        2,
        4,
        {
          "SwitchCase": 1
        }
      ]
    }
  }
}
